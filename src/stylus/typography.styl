icomoon-font-path ?= "assets/fonts"

icon-play_arrow = "\e901"
icon-keyboard_arrow_down = "\e902"
icon-arrow_drop_down_circle = "\e903"
icon-arrow_drop_down = "\e904"
icon-arrow_downward = "\e905"
icon-star = "\e906"
icon-star2 = "\e907"
icon-email = "\e900"
icon-facebook = "\ea90"
icon-instagram = "\ea92"
icon-twitter = "\ea96"
icon-github = "\eab0"
icon-linkedin = "\eaca"

@font-face
  font-family 'lucre-icons'
  src url(icomoon-font-path + '/lucre-icons.eot?ukje0m')
  src url(icomoon-font-path + '/lucre-icons.eot?ukje0m#iefix') format('embedded-opentype'), url(icomoon-font-path + '/lucre-icons.ttf?ukje0m') format('truetype'), url(icomoon-font-path + '/lucre-icons.woff?ukje0m') format('woff'), url(icomoon-font-path + '/lucre-icons.svg?ukje0m#lucre-icons') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'lucre-icons' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-play_arrow
  &:before
    content icon-play_arrow
.icon-keyboard_arrow_down
  &:before
    content icon-keyboard_arrow_down
.icon-arrow_drop_down_circle
  &:before
    content icon-arrow_drop_down_circle
.icon-arrow_drop_down
  &:before
    content icon-arrow_drop_down
.icon-arrow_downward
  &:before
    content icon-arrow_downward
.icon-star
  &:before
    content icon-star
.icon-star2
  &:before
    content icon-star2
.icon-email
  &:before
    content icon-email
.icon-facebook
  &:before
    content icon-facebook
.icon-instagram
  &:before
    content icon-instagram
.icon-twitter
  &:before
    content icon-twitter
.icon-github
  &:before
    content icon-github
.icon-linkedin
  &:before
    content icon-linkedin